# Simple development Dockerfile
FROM node:18-alpine

WORKDIR /app

# Install dependencies (including dev dependencies for Tailwind)
COPY package*.json ./
RUN npm ci --legacy-peer-deps --include=dev

# Copy source code
COPY . .

# Generate Prisma client
RUN npx prisma generate

# Expose port
EXPOSE 3000

# Run in development mode
CMD ["npm", "run", "dev"]